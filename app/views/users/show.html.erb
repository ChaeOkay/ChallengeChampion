<h1><%= @user.name %>, represented by the brave and loyal <%= @user.champion.name %></h1><br>
<% if not_myself? %>
	<%= button_to "Challenge", challenges_path(:challenged_user => @user.id), method: :post %>
<% end %>


<h3>Challenge History</h3>
<p>
  Wins: <%= @user.wins %>
  Losses: <%= @user.losses %>
</p>

<h3>Recent Contests</h3>
<ul>
	<% @challenges.each do |challenge| %>
		<li>
			<%= challenge.description %>
		</li>
	<% end %>
</ul>
